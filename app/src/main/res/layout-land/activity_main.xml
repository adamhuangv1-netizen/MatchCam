<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Transparent overlay to detect outside clicks when panels are open -->
    <View
        android:id="@+id/panel_click_interceptor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recording Timer -->
    <TextView
        android:id="@+id/recording_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/timer_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/video_capture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_recording"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Zoom Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_zoom"
        app:layout_constraintBottom_toBottomOf="@id/video_capture_button"
        app:layout_constraintTop_toTopOf="@id/video_capture_button"
        app:layout_constraintEnd_toStartOf="@id/video_capture_button"
        app:tint="@android:color/white"
        app:backgroundTint="#AA000000"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini" />

    <!-- Settings Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_wrench"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="@id/video_capture_button"
        app:layout_constraintTop_toTopOf="@id/video_capture_button"
        app:layout_constraintStart_toEndOf="@id/video_capture_button"
        app:tint="@android:color/white"
        app:backgroundTint="#AA000000"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini" />

    <!-- Zoom Panel (Landscape: Opens to the LEFT of zoom button) -->
    <LinearLayout
        android:id="@+id/zoom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:background="@drawable/panel_background"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fab_zoom"
        app:layout_constraintEnd_toStartOf="@id/fab_zoom"
        app:layout_constraintVertical_bias="1.0">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:id="@+id/zoom_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <!-- Settings Panel (Landscape: Opens to the RIGHT of settings button) -->
    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/panel_background"
        android:layout_marginStart="12dp"
        android:visibility="gone"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/fab_settings"
        app:layout_constraintStart_toEndOf="@id/fab_settings"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segment Size"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD" />
                <Spinner
                    android:id="@+id/spinner_segment_size"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_auto_stealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto Stealth (10s)"
                    android:textColor="#FFFFFF"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_flash_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flash Heartbeat"
                    android:textColor="#FFFFFF"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flash Every (sec)"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD" />
                <EditText
                    android:id="@+id/edit_flash_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="10"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Quality"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD"
                    android:layout_marginTop="12dp" />
                <Spinner
                    android:id="@+id/spinner_quality"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#FFFFFF" />

                <Button
                    android:id="@+id/stealth_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Stealth Mode"
                    android:backgroundTint="#8BC34A"
                    android:layout_marginTop="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Match Cam"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/about_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by Adam Huang"
                    android:textColor="#BDBDBD"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/blackOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
